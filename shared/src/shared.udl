namespace shared {
  [Throws=PlatformError]
  string add_for_platform(u32 left, u32 right, Platform platform);
};

[Enum]
interface Msg {
  GetNewFact();
  ReceiveFact(sequence<u8> bytes);
};

[Enum]
interface Effect {
  Render(string cat_fact);
  Get(string url);
};

interface Core {
  constructor();
  Effect update(Msg msg);
};

[Error]
enum PlatformError {
  "InternalPlatformError",
};

callback interface Platform {
  [Throws=PlatformError]
  string get();
};
